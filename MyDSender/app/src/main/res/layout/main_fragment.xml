<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="380dp"
    android:layout_height="242.25dp"
    android:layout_gravity="center"
    android:layout_margin="20dp">
    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="358dp"
            android:orientation="vertical"
            android:padding="20dp"
            android:layout_gravity="center"
            android:clickable="true" android:weightSum="1">
        <TextView
            android:id="@+id/card_account_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Name"
            android:fontFamily="sans-serif"
            android:textStyle="bold"
            android:textSize="18dp"
            android:layout_marginTop="40dp"
            />
        <EditText
            android:id="@+id/name_field"
            android:width="360dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-condensed"
            android:textStyle="bold"
            android:textSize="42dp"
            android:singleLine="true"
            android:inputType="text" />
        <Switch
                android:text="Blind / Bad Eyesight"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/blind_switch"
                android:fontFamily="sans-serif"
                android:textStyle="bold"
                android:textSize="18dp"
                android:layout_marginTop="40dp" />
        <Switch
                android:text="Deaf / Bad Hearing"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/deaf_switch"
                android:fontFamily="sans-serif"
                android:textStyle="bold"
                android:textSize="18dp"
                android:layout_marginTop="40dp" />
    </LinearLayout>
</FrameLayout>